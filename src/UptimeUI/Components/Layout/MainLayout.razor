<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <h1 class="text-primary">📊 Uptime Monitor</h1>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

